# OpenBoxes Production Docker Defaults
# Copy this file to .env and customize for your deployment

# OpenBoxes Version
OPENBOXES_VERSION=v0.9.6-hotfix1

# Database Configuration
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=openboxes
MYSQL_USER=openboxes
MYSQL_PASSWORD=change_me_password

# Application URL (IMPORTANT: Update this for your domain)
OPENBOXES_URL=https://your-domain.com

# Mail Configuration (optional)
MAIL_ENABLED=false
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
